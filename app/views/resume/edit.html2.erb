        <%#= f.submit do %>
 <!--         <i class="fas fa-pencil-alt fa-2x"></i>-->
        <%# end %>
 <!--       <p class ="text-center">保存<span>-->
 <!--     </div>-->
    <%# end %>
 <!-- </div>-->
 <div class="text-center"><%= f.submit "編集する", class: "submitBtn" %></div>
  
</section>