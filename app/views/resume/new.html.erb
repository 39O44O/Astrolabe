<div class="listeditPage">
  <div class="container">
    <%= form_with model: @resume, url: { action: :create }, html: { class: 'resumeForm' }, local: true do |f| %>
      <% if @resume.errors.any? %>
        <p class="text-danger">タイトルは1～255文字以内で入力してください</p>
      <% end %>
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control", placeholder: "名前" %>
      <div class="text-center"><%= f.submit "保存する", class: "submitBtn" %></div>
    <% end %>
  </div>
</div>